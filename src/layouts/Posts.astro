---
import Badge from "../components/Badge.astro"
import { convertDateWithOutYears } from "../utils"
const {
	content: { title, pubDate, image, tags },
} = Astro.props
---

<section>
	<div class="mx-auto max-w-screen-xl px-4 py-16 sm:px-6 sm:py-24 lg:px-8">
		<div class="max-w-3xl">
			<h2 class="text-3xl font-bold sm:text-4xl">
				{title}
			</h2>
			<span
				class="flex flex-col sm:gap-y-2 md:flex-row md:item-center md:gap-y-2 md:divide-x md:divide-textColor"
			>
				<time class="pr-2">{convertDateWithOutYears(pubDate)}</time>
				<div class="flex flex-wrap gap-1 pl-2 items-center">
					{tags.map((item: string) => <Badge content={item} />)}
				</div>
			</span>
		</div>

		<div class="mt-8 grid grid-cols-1 gap-8 lg:grid-cols-2 lg:gap-16">
			<div class="relative h-64 overflow-hidden sm:h-80 lg:h-full">
				<img
					alt={title}
					src={image}
					class="absolute inset-0 h-full w-full object-cover rounded-md"
				/>
			</div>

			<div class="lg:py-16">
				<article class="space-y-4 text-gray-600">
					<slot />
				</article>
			</div>
		</div>
	</div>
</section>
